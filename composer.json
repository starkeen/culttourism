{
    "name": "starkeen/culttourism",
    "license": "MIT",
    "authors": [
        {
            "name": "culttourism",
            "email": "andrey@culttourism.ru"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2",
        "smarty/smarty": "^4.3",
        "phpmailer/phpmailer": "^6.0",
        "ezyang/htmlpurifier": "^4.7",
        "sentry/sdk": "^4.0",
        "guzzlehttp/guzzle": "^7.8",
        "jolicode/jolitypo": "*",
        "vlucas/phpdotenv": "^4.1",
        "myclabs/php-enum": "^1.7",
        "starkeen/yandex-search-api": "^1.2",
        "hflabs/dadata": "^22.3",
        "cmfcmf/openweathermap-php-api": "^3.3",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-SimpleXML": "*",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "ext-iconv": "*",
        "ext-gd": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "1.*",
        "phpunit/phpunit": "^10.5",
        "phpmd/phpmd": "^2.15",
        "squizlabs/php_codesniffer": "^3.8",
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.41"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.13"
        }
    },
    "autoload": {
        "psr-4": {
            "app\\": "src/",
            "tests\\": "tests/",
            "": ""
        },
        "classmap": [
            "includes/",
            "models/"
        ],
        "files": [
            "includes/functions.php"
        ],
        "exclude-from-classmap": [
            "/modules/",
            "/tests/"
        ]
    }
}
