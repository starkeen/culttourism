{
    "name": "starkeen/culttourism",
    "license": "MIT",
    "authors": [
        {
            "name": "culttourism",
            "email": "andrey@culttourism.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "smarty/smarty": "^4.2",
        "phpmailer/phpmailer": "^6.0",
        "ezyang/htmlpurifier": "^4.7",
        "sentry/sdk": "^3.5",
        "guzzlehttp/guzzle": "^7.8",
        "fanamurov/mdash": "^1.0",
        "vlucas/phpdotenv": "^4.1",
        "myclabs/php-enum": "^1.7",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-SimpleXML": "*",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "ext-iconv": "*",
        "ext-gd": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "app\\": "src/",
            "tests\\": "tests/",
            "": ""
        },
        "classmap": [
            "includes/",
            "models/"
        ],
        "files": [
            "includes/functions.php"
        ],
        "exclude-from-classmap": [
            "/modules/",
            "/tests/"
        ]
    }
}
