{
    "name"       : "starkeen/culttourism",
    "license"    : "MIT",
    "authors"    : [
        {
            "name" : "culttourism",
            "email": "andrey@culttourism.ru"
        }
    ],
    "require"    : {
        "php"                : "^8.0",
        "smarty/smarty"      : "^3.1",
        "phpmailer/phpmailer": "^6.0",
        "ezyang/htmlpurifier": "^4.7",
        "sentry/sdk"         : "^3.1",
        "guzzlehttp/guzzle"  : "^6.5",
        "fanamurov/mdash"    : "^1.0",
        "vlucas/phpdotenv"   : "^4.1",
        "myclabs/php-enum"   : "^1.7",
        "ext-pdo"            : "*",
        "ext-curl"           : "*",
        "ext-SimpleXML"      : "*",
        "ext-json"           : "*",
        "ext-fileinfo"       : "*",
        "ext-iconv"          : "*",
        "ext-gd"             : "*",
        "ext-dom"            : "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit"          : "^8.5.13"
    },
    "autoload"   : {
        "psr-4"                : {
            "app\\"  : "src/",
            "tests\\": "tests/",
            ""       : ""
        },
        "classmap"             : [
            "includes/",
            "models/"
        ],
        "files"                : [
            "includes/functions.php"
        ],
        "exclude-from-classmap": [
            "/modules/",
            "/tests/"
        ]
    }
}
