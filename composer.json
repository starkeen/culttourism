{
    "name"        : "starkeen/culttourism",
    "authors"     : [
        {
            "name"  : "culttourism",
            "email" : "andrey@culttourism.ru"
        }
    ],
    "require"     : {
        "php"                 : ">7.1.0",
        "smarty/smarty"       : ">3.1.30",
        "phpmailer/phpmailer" : "^5.2",
        "ezyang/htmlpurifier" : "^4.7",
        "sentry/sentry"       : "^1.5",
        "guzzlehttp/guzzle"   : "^6.2",
        "iamsalnikov/mdash"   : "^3.5",
        "ext-pdo"             : "*",
        "ext-curl"            : "*",
        "ext-SimpleXML"       : "*",
        "ext-json"            : "*"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^6.1"
    },
    "autoload"    : {
        "psr-4"                 : {
            "app\\"   : "src/",
            "tests\\" : "tests/",
            ""        : ""
        },
        "classmap"              : [
            "includes/",
            "models/"
        ],
        "files"                 : [
            "includes/functions.php",
            "includes/debug.php"
        ],
        "exclude-from-classmap" : [
            "/modules/",
            "/tests/"
        ]
    }
}
